<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics.CapphatVPPLayout"
    android:orientation="vertical">

    // BACK BUTTON ------------------------------------------------------
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:id="@+id/CPV_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/CP_backBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            app:icon="@drawable/baseline_arrow_back_ios_black_18"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="#000"
            />

    </LinearLayout>

    // HEADING LABEL ------------------------------------------------------
    <TextView
        style="@style/Heading"
        android:text="Cấp phát Vật tư"
        />

    // PB SPINNER ------------------------------------------------------
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/textBlack"
            android:text="@string/ten_pb"
            android:paddingHorizontal="30dp"
            />
        <Spinner
            android:layout_gravity="center"
            android:id="@+id/CP_PBSpinner"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    // WARNING LABEL ------------------------------------------------------
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:id="@+id/CP_warningLabel"
            android:layout_marginLeft="50dp"
            style="@style/textRed"
            android:text="Khi chọn tất cả phòng kho cấu trúc bảng sẽ khác"
            />

    </LinearLayout>

    // ALL PB  -------------------------------- TABLES -----------------
    <LinearLayout
        android:id="@+id/CP_tablesAll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/CP_tableAll1_container"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            tools:context=".Main.NhanvienLayout"
            >

            <!--    Header of the table -->
            <!-- 80 / 150 / 60 / 60 / 60 -->
            <TableLayout
                style="@style/tableLayoutStyle"
                android:stretchColumns="4"
                >
                <TableRow>
                    <TextView
                        style="@style/tableHeader"
                        android:text="SP"
                        android:layout_width="70dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="Ngày "
                        android:layout_width="150dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="VPP"
                        android:layout_width="60dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="NV"
                        android:layout_width="60dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="SL"
                        android:maxWidth="60dp"
                        />
                </TableRow>

            </TableLayout>
            <!--    Content of the table -->
            <!-- 80 / 150 / 60 / 60 / 60 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/CP_tableCP"
                    style="@style/tableLayoutStyle"
                    android:stretchColumns="4"
                    >
                    <!--         Generate Row based on Data here   -->
                    <TableRow>
                        <TextView
                            style="@style/PBRow_firstCellWidth"
                            android:text="P001"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            />
                        <TextView
                            style="@style/tableRow"
                            android:text="06/02/2018"
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            />
                        <TextView
                            style="@style/tableRow"
                            android:text="VPP1"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            />
                        <TextView
                            style="@style/tableRow"
                            android:text="NV1"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            />
                        <TextView
                            style="@style/tableRow"
                            android:text="10"
                            android:maxWidth="60dp"
                            />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp">
            <TextView
                android:id="@+id/CP_labelVPP"
                style="@style/textBlack"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="VPP2:   Kéo"
                />
            <Button
                android:id="@+id/CP_previewVPPBtn"
                android:drawableLeft="@drawable/baseline_visibility_black_24"
                style="@style/Btn"
                android:paddingLeft="12dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:backgroundTint="#50E363"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CP_tableAll2_container"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            >
            <!--    Header of the table -->
            <!--    -->
            <TableLayout
                style="@style/tableLayoutStyle"
                android:stretchColumns="1"
                >
                <TableRow>
                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/ma_nv"
                        android:layout_width="80dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/ten_nv"
                        android:maxWidth="300dp"
                        />
                </TableRow>
                <!--    Content of the table -->
            </TableLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/CP_tableNV"
                    style="@style/tableLayoutStyle"
                    android:stretchColumns="1">
                    <!--         Generate Row based on Data here   -->
                    <TableRow>
                        <TextView
                            style="@style/PBRow_firstCellWidth"
                            android:text="NV1"
                            android:layout_width="80dp"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            />
                        <TextView
                            style="@style/tableRow"
                            android:text="Nguyễn Thành Nam"
                            android:maxWidth="300dp"
                            android:layout_height="0dp"
                            android:visibility="invisible"
                            />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    // INDEX PB  ------------------------------ TABLES -----------------
    <LinearLayout
        android:id="@+id/CP_tablesIndex_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/CP_tableIndex1_container"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Main.NhanvienLayout"
            >
            <!--    Header of the table -->
            <!-- 85 / 180 p0 / 50 p0 / 80  -->
            <TableLayout
                style="@style/tableLayoutStyle"
                android:layout_width="match_parent"
                android:stretchColumns="3">
                <TableRow>

                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/ma_vpp"
                        android:layout_width="85dp"/>

                    <TextView
                        style="@style/VPPHeader_secCellWidth"
                        android:text="@string/ten_vpp"
                        android:layout_width="180dp"/>

                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/dvt"
                        android:layout_width="50dp"
                        android:padding="0dp"/>
                    <TextView
                        style="@style/tableHeader"
                        android:maxWidth="80dp"
                        android:text="@string/tri_gia" />
                </TableRow>

            </TableLayout>
            <!--    Content of the table -->
            <!-- 85 / 180 p0 / 50 p0 / 80  -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                >
                <TableLayout
                    android:id="@+id/CP_tableVPP"
                    style="@style/tableLayoutStyle"
                    android:stretchColumns="3"
                    >
                    <TableRow
                        >
                        <TextView
                            android:visibility="invisible"
                            style="@style/VPPRow_firstCellWidth"
                            android:text="VPP1"
                            android:layout_height="0dp"
                            android:layout_width="85dp"
                            />
                        <TextView
                            android:visibility="invisible"
                            style="@style/VPPRow_secCellWidth"
                            android:layout_width="180dp"
                            android:layout_height="0dp"
                            android:text="Giấy A4" />
                        <TextView
                            android:visibility="invisible"
                            style="@style/tableRow"
                            android:text="Gram"
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:padding="0dp"/>
                        <TextView
                            android:visibility="invisible"
                            style="@style/tableRow"
                            android:text="70.000"
                            android:layout_height="0dp"
                            android:maxWidth="80dp"
                            />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:id="@+id/CP_noteVppLabel"
            style="@style/textRed"
            android:text="VPP4 được cấp cho các nhân viên dưới đây"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            />
        <LinearLayout
            android:id="@+id/CP_tableIndex2_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <!--    Header of the table -->
            <!-- 80 / 230 / 100-->
            <TableLayout
                style="@style/tableLayoutStyle"
                android:stretchColumns="2"
                >
                <TableRow>
                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/ma_nv"
                        android:layout_width="80dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/ten_nv"
                        android:layout_width="230dp"
                        />
                    <TextView
                        style="@style/tableHeader"
                        android:text="@string/so_luong"
                        android:maxWidth="100dp"
                        />
                </TableRow>
            </TableLayout>
            <!--    Content of the table -->
            <!-- 80 / 230 / 90-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/CP_tableNV2"
                    style="@style/tableLayoutStyle"
                    android:layout_width="match_parent"
                    android:stretchColumns="2"
                    >
                    <!--         Generate Row based on Data here   -->
                    <TableRow>
                        <TextView
                            android:visibility="invisible"
                            style="@style/PBRow_firstCellWidth"
                            android:text="NV1"
                            android:layout_width="80dp"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:visibility="invisible"
                            style="@style/tableRow"
                            android:text="Nguyễn Thành Nam"
                            android:layout_width="230dp"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:visibility="invisible"
                            style="@style/tableRow"
                            android:text="60"
                            android:maxWidth="90dp"
                            android:layout_height="0dp"
                            />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:id="@+id/CP_noteTotalLabel"
            style="@style/textRed"
            android:text="Tổng Chi phí trong Phòng kho Thủ Đức được cấp :"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                style="@style/textBlack"
                android:text="Số loại Vật tư:"
                android:textSize="14dp"
                android:layout_width="200dp"
                android:paddingHorizontal="30dp"/>

            <TextView
                android:textSize="14dp"
                android:id="@+id/CP_totalCount"
                style="@style/textBlack"
                android:layout_width="match_parent"
                android:paddingHorizontal="50dp"
                android:text="2"
                android:textColor="#0940CD"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                style="@style/textBlack"
                android:text="Tổng:"
                android:layout_width="200dp"
                android:paddingHorizontal="30dp"/>
            <TextView
                android:id="@+id/CP_totalPrice"
                style="@style/textBlack"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:paddingHorizontal="30dp"
                android:text="200.000đ"
                android:textColor="#1E7A0A"/>
        </LinearLayout>
    </LinearLayout>

    // Button Navbar --------------------------------------------------------
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:paddingTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/CP_navbar_thongke"
            style="@style/Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Thống kê"
            android:textAllCaps="true"
            app:backgroundTint="@color/lightdark"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/CP_navbar_baocao"
            style="@style/Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="@string/bao_cao"
            android:textAllCaps="true"
            app:backgroundTint="@color/lightdark"
            />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        layout="@layout/_created_by_3xdteam"/>
</LinearLayout>